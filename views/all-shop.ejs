<%- include('includes/header') %>
  <link rel="stylesheet" type="text/css" href="/css/collections.css" />

  <body>
    <div id="main_container">
      <div class="group_name">
        <ul class="nav justify-content-center">
          <li class="nav-item" style="cursor: pointer">
            <a class="nav-link active" href="/shop">Home</a>
          </li>
          <li class="nav-item" style="cursor: pointer">
            <a class="nav-link" href="/shop/all-shop">AllShop</a>
          </li>
          <li class="nav-item" style="cursor: pointer">
            <a class="nav-link active" href="/shop/logout">Logout</a>
          </li>
        </ul>
      </div>
      <div class="shop_collections_frame">
        <div class="shop_container">
          <div class="shop_table">
            <span class="new_jewellry_txt">All Products List</span>
            <table class="table table-hover table-sm">
              <thead class="thead-light">
                <tr class="thead-light">
                  <th scope="col">T/R</th>
                  <th scope="col">Product Name</th>
                  <th scope="col">Client Phone</th>
                  <th scope="col">Top Products</th>
                  <th scope="col">Product Status</th>
                </tr>
              </thead>
              <% shop_data.map((value, key) => { %>
                <tbody style="background-color: #ffffff">
                  <tr>
                    <td>
                      <%= key + 1 %>
                    </td>
                    <td>
                      <%= value.mb_nick %>
                    </td>
                    <td>
                      <%= value.mb_phone %>
                    </td>
                    <td style="width: 13%">
                      <label class="switch">
                        <input class="mb_top" type="checkbox" id="<%= value._id %>" <%=value.mb_top==='Y' ? "checked"
                          : '' %> />
                        <span class="slider round"></span>
                      </label>
                    </td>
                    <td style="width: 13%">
                      <select class="spec_select mb_status" id="<%= value._id %>">
                        <option value="ACTIVE" <%=value.mb_status==='ACTIVE' ? "selected" : '' %>>ACTIVE</option>
                        <option value="ONPAUSE" <%=value.mb_status==='ONPAUSE' ? "selected" : '' %>>ONPAUSE</option>
                        <option value="DELETED" <%=value.mb_status==='DELETED' ? "selected" : '' %>>DELETED</option>
                      </select>
                    </td>
                  </tr>
                </tbody>
                <% }); %>
            </table>
          </div>
        </div>
      </div>
    </div>
    <script>
      $(function () {
        // manipulate top shop features
        $(".mb_top").on("change", function (e) {
          const id = e.target.id
          const mb_top = e.target.checked ? 'Y' : 'N'

          axios.post('/shop/all-shop/edit', { id: id, mb_top: mb_top })
            .then(responce => {
              const result = responce.data;
              console.log("result_top", result);
              if (result.state === "success") alert("successfuly updated")
              else alert(result.message)
            })
            .catch(err => console.log(err));
        });
        // manipulate shops status features
        $(".mb_status").on("change", function (e) {
          const id = e.target.id
          const mb_status = $(`#${id}.mb_status`).val();
          console.log("mb_status", mb_status);
          axios.post('/shop/all-shop/edit', { id: id, mb_status: mb_status })
            .then(response => {
              const result = response.data;
              console.log("result_status", result);
              if (result.state === "success") alert("successfuly updated")
              else alert(result.message)
            })
            .catch(err => console.log(err));
        });
      });
    </script>
  </body>
  <%- include('includes/footer') %>